{
  "compilerOptions": {
    "outDir": "lib",
    "module": "commonjs",
    "target": "es5",
    "lib": [
      "es6",
      "dom"
    ],
    "allowJs": true,
    "jsx": "react",
    "moduleResolution": "node",
    "rootDir": "src",
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "checkJs": false,
    "inlineSourceMap": true
  },
  "files": [
    "src/index.js",
    "tools/story.js"
  ],
  "exclude": [
    "node_modules",
    "lib"
  ]
}