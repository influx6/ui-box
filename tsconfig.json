{
  "compilerOptions": {
    "outDir": "lib",
    "module": "commonjs",
    "target": "es6",
    "lib": [
      "es6",
      "es2016",
      "es2017",
      "dom"
    ],
    "allowJs": false,
    "jsx": "react",
    "moduleResolution": "node",
    "rootDirs": ["src", "tools"],
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": false,
    "strictNullChecks": true,
    "checkJs": false,
    "sourceMap": true
  },
  "files": [
    "src/index.tsx",
    "tools/story.tsx"
  ],
  "exclude": [
    "node_modules",
    "lib"
  ]
}
